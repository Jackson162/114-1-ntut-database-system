<!DOCTYPE html>
<html>
<head>
    <title>Bookstore Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f7f6; /* 淺灰色背景 */
        }
        .login-container {
            background-color: #ffffff; /* 白色容器 */
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
        }
        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }
        input[type="text"], input[type="password"], select {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box; /* 確保 padding 不會增加寬度 */
        }
        input[type="submit"] {
            width: 100%;
            background-color: #4CAF50; /* 綠色按鈕 */
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        input[type="submit"]:hover {
            background-color: #45a049;
        }
        .error, .success {
            padding: 5px;
            border-radius: 4px;
            margin-bottom: 5px;
            text-align: center;
        }
        .error {
            background-color: #fdd;
            color: red;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Bookstore Login</h1>

            {% if login_error %}
                <div class="error" style="color: red;">
                    <h2>Login Error</h2>
                    <p>{{ login_error }}</p>
                </div>
            {% endif %}

            {% if register_succeeded %}
                <div class="success" style="color: green;">
                    <h3>Registration Successful</h3>
                    <p>You can now log in with your new account.</p>
                </div>
            {% endif %}

    <form id="login_form" method="post" action="/auth/login">
        <label for="account">Account:</label><br>
        <input type="text" id="account" name="account" required><br><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" required><br><br>
        <label for="role">Role:</label><br>
        <select id="role" name="role">
            <option value="customer">Customer</option>
            <option value="staff">Staff</option>
            <option value="admin">Admin</option>
        </select><br><br>
        <input type="submit" value="Login">

    </form>

    <div style="text-align: center; margin-top: 15px;">
        <a href="/auth/register" style="color: #4CAF50; text-decoration: none; font-size: 14px;">
            No account? Sign Up
        </a>
    </div>

    <div id="login_error" hidden>
      <h1>login error!!!!!</h1>
    </div>
    </div>
    <script>
    const form = document.getElementById('login_form');
    // Attaches the main submission handler
    form.addEventListener('submit', async function(event) {
        event.preventDefault(); // Stop the default page reload
        console.log("submit captured")
        // 1. Get the data
        const formData = new FormData(event.target);
        const formProps = Object.fromEntries(formData);
        const jsonPayload = JSON.stringify(formProps);
        console.log("jsonPayload")
        console.log(jsonPayload)
        // 2. Send the data
        await sendDataWithFetch(jsonPayload);
    });

    // Function to send the data via Fetch API
    async function sendDataWithFetch(payload) {
        const url = '/auth/login';

        try {
            const response = await fetch(url, {
                method: 'POST', 
                headers: {
                    'Content-Type': 'application/json',
                },
                body: payload,
            });

            if (response.ok) {
              data = await response.json()
              window.location.href = data.next_page_path;
            } else {
                console.error(`login failed with status: ${response.status}`);
                console.log(response)
                showLoginError()
            }
        } catch (error) {
            console.error(`login failed with error: ${error}`);
            console.log('An error occurred during submission.');
            showLoginError()
        }
    }

    function showLoginError() {
        const div = document.getElementById('login_error');
        if (div.hasAttribute('hidden')) div.removeAttribute('hidden');
    }
  </script>
</body>
</html>
