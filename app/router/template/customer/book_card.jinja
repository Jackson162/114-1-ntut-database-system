{# template/customer/book_card.jinja #}
<div class="book-card">
    
    {# 封面圖 (點擊跳轉至 /book/:book_id) #}
    <a href="/frontend/customers/book/{{ book.book_id }}">
        <img src="{{ book.image_url }}" alt="{{ book.title }}">
    </a>
    
    {# 書名 (點擊跳轉至 /book/:book_id) #}
    <div class="book-title">
        <a href="/frontend/customers/book/{{ book.book_id }}">
            {{ book.title }}
        </a>
    </div>
	
    <br>

    {# 作者 #}
    <a href="/frontend/customers/author/{{ book.author_name | urlencode }}?bookstore_id={{ book.bookstore_id }}">
        {{ book.author_name }}
    </a>

    
    {# 價格 #}
    <div class="book-price">NT$ {{ book.min_price }}</div>
    
    {# 加入購物車按鈕 (需要 JavaScript 處理) #}
    <button class="add-to-cart-btn" 
        data-book-id="{{ book.book_id }}"
        data-min-price="{{ book.min_price }}"
        data-bookstore-id="{{ book.bookstore_id }}"> 
        加入購物車
    </button>
</div>