    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.add-to-cart-btn').forEach(button => {
                button.addEventListener('click', async (event) => {
                    const bookId = event.target.dataset.bookId;
                    const minPrice = event.target.dataset.minPrice;
                    
                    try {
                        const response = await fetch('/customers/cart-items', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                book_id: bookId,
                                price: minPrice,
                                book_bookstore_mapping_id: bookId, 
                                quantity: 1
                            })
                        });

                        if (response.ok) {
                            alert('ÂïÜÂìÅÂ∑≤Âä†ÂÖ•Ë≥ºÁâ©ËªäÔºÅ');
                        } else {
                            alert('Âä†ÂÖ•Ë≥ºÁâ©ËªäÂ§±ÊïóÔºåË´ãÁ®çÂæåÂÜçË©¶„ÄÇ');
                        }
                    } catch (error) {
                        console.error('API ÈåØË™§:', error);
                        alert('Á∂≤Ë∑ØÈåØË™§ÔºåÁÑ°Ê≥ïÂä†ÂÖ•Ë≥ºÁâ©Ëªä„ÄÇ');
                    }
                });
            });
        });
    </script>
</body>
</html>