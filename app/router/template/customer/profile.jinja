            padding: 8px 15px;
            border: 1px solid #ccc;
            border-radius: 20px;
        }
        .nav-icons a {
            margin-left: 15px;
            text-decoration: none;
            color: #333;
            position: relative;
        }
        .nav-icons span {
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
