<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: sans-serif;
            margin: 2em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Book Stock</h1>
        <p>Welcome, {{ staff.name }}!</p>

        {% if list_book_error %}
            <div class="alert alert-danger">
                <p>Sorry, we couldn't load the book list at this time.</p>
                <p><strong>Error:</strong> {{ list_book_error }}</p>
            </div>
        {% endif %}

        {% if create_book_error %}
            <div class="alert alert-danger">
                <p>Adding Book to Stock Fails!</p>
                <p><strong>Error:</strong> {{ create_book_error }}</p>
            </div>
        {% endif %}

        {% if create_book_succeeds %}
            <div class="alert alert-danger">
                <p>Adding Book to Stock Succeeds!</p>
            </div>
        {% endif %}

        {% if books %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for book in books %}
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <img src="{{ url_for('static', path='/book.png') }}">
                                <h5 class="card-title">{{ book.title }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Author: {{ book.author }}</h6>
                                <p class="card-text">
                                    <strong>Publisher:</strong> {{ book.publisher }}<br>
                                    <strong>ISBN:</strong> {{ book.isbn }}<br>
                                    <strong>Publish Date:</strong> {{ book.publish_date }}
                                </p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Price: ${{ book.price }} | Quantity: {{ book.store_quantity }}</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">No books found for your bookstore.</p>
        {% endif %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>